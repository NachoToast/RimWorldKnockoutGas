<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- knockout gas shell -->

    <ThingDef ParentName="MakeableShellBase">
        <defName>NachoToast_Shell_KnockoutGas</defName>
        <label>knockout gas shell</label>
        <description>A shell that releases a cloud of knockout gas when detonated, causing biological lifeforms in its area of effect to slowly become unconscious. Can be fired from mortars or installed as a trap. Explodes when damaged.</description>
        <possessionCount>2</possessionCount>
        <graphicData>
            <texPath>Things/Item/Resource/Shell/Shell_KnockoutGas</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <comps>
            <li Class="CompProperties_Explosive">
                <explosiveDamageType>Smoke</explosiveDamageType>
                <explosiveRadius>11</explosiveRadius>
                <postExplosionGasType>Unused</postExplosionGasType>
                <wickTicks>30~60</wickTicks>
            </li>
        </comps>
        <projectileWhenLoaded>NachoToast_Bullet_Shell_KnockoutGas</projectileWhenLoaded>
        <costList>
            <Steel>10</Steel>
            <MedicineHerbal>5</MedicineHerbal>
        </costList>
        <costListForDifficulty>
            <difficultyVar>classicMortars</difficultyVar>
            <costList>
                <Steel>30</Steel>
                <MedicineHerbal>5</MedicineHerbal>
            </costList>
        </costListForDifficulty>
        <recipeMaker>
            <researchPrerequisites>
                <li>Mortars</li>
                <li>GasOperation</li>
            </researchPrerequisites>
            <displayPriority>121</displayPriority>
        </recipeMaker>
        <modExtensions>
            <li Class="SCGF.CustomGasExtension">
                <gasDef>KnockoutGas</gasDef>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>NachoToast_Bullet_Shell_KnockoutGas</defName>
        <label>knockout gas shell</label>
        <graphicData>
            <texPath>Things/Projectile/ShellSmoke</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>Smoke</damageDef>
            <speed>41</speed>
            <explosionRadius>7.2</explosionRadius>
            <flyOverhead>true</flyOverhead>
            <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
            <soundExplode>Explosion_Smoke</soundExplode>
            <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
            <soundAmbient>MortarRound_Ambient</soundAmbient>
            <postExplosionGasType>Unused</postExplosionGasType>
        </projectile>
        <modExtensions>
            <li Class="SCGF.CustomGasExtension">
                <gasDef>KnockoutGas</gasDef>
            </li>
        </modExtensions>
    </ThingDef>

</Defs>
